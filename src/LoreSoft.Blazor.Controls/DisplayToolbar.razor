@typeparam TItem

<div class="d-flex justify-content-end" style="@GetDisplay(!Selected.Any())">
    @NotSelectedTemplate(Selected)
</div>
<div class="d-flex justify-content-end align-items-center" style="@GetDisplay(Selected.Any())">
    @SelectedTemplate(Selected)
</div>

@code {
    [Parameter] public RenderFragment<IEnumerable<TItem>> NotSelectedTemplate { get; set; }
    [Parameter] public RenderFragment<IEnumerable<TItem>> SelectedTemplate { get; set; }
    [Parameter] public IEnumerable<TItem> Selected { get; set; }

    private string GetDisplay(bool display) => display ? "" : "display: none!important;";
}
